---
import RotatingMenu from "@components/rotating-menu-craft";
import BaseLayout from "@layouts/BaseLayout.astro";
import lineChartImg from "@assets/line-chart.png";
import samsungNotifications from "@assets/samsung-notifications.mp4";
---

<BaseLayout>
    <section class="mx-auto max-w-5xl pt-20 pb-40 px-4 min-h-screen">
        <div class="text-4xl font-bold">Craft</div>
        <section
            class="isolate mt-12 grid gap-4 *:rounded-4xl *:border *:border-gray-300 *:p-6 lg:grid-cols-3"
        >
            <div class="h-fit bg-white">
                <img src={lineChartImg.src} alt="Craft Image" />
                <a
                    href="/crafts/line-chart"
                    class="mt-3 inline-block w-full rounded-full bg-gray-100 py-2 text-center"
                >
                    View craft
                </a>
            </div>
            <div class="h-fit bg-white">
                <video
                    src={samsungNotifications}
                    autoplay
                    loop
                    muted
                    class="w-270"></video>
                <a
                    href="/crafts/samsung-notifications"
                    class="mt-3 inline-block w-full rounded-full bg-gray-100 py-2 text-center"
                >
                    View craft
                </a>
            </div>
            <div class="hidden h-fit bg-white">
                <RotatingMenu />
            </div>
        </section>
    </section>
</BaseLayout>
