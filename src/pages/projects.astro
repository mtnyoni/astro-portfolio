---
import BaseLayout from "@layouts/BaseLayout.astro";
import { projects } from "@utils/constants";
import { CalendarIcon } from "@lucide/astro";
---

<BaseLayout>
    <div class="mx-auto max-w-200 pt-20 pb-40 px-4 bg-white min-h-screen">
        <div class="text-4xl font-bold">Projects</div>
        <div class="mt-8 space-y-8">
            {
                projects.map((project, idx) => (
                    <a
                        href={project.link}
                        target="_blank"
                        class="block space-y-1"
                    >
                        <h3 class="text-sky-700">{project.title}</h3>
                        <div class="flex items-center gap-3 text-gray-400 text-sm">
                            <CalendarIcon stroke-width="1.5" class="size-4" />{" "}
                            Aug 31, 2026
                        </div>
                        <p class="text-gray-600">{project.description}</p>
                    </a>
                ))
            }
        </div>
    </div>
</BaseLayout>
